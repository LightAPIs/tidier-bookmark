{
  "name": "tidier-bookmark",
  "description": "A chrome-extension project",
  "version": "1.0.1",
  "author": "pana",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-watch": "vue-cli-service build-watch",
    "build-sourcemap": "vue-cli-service build --mode sourcemap",
    "build-zip": "vue-cli-service build --mode zipfile",
    "build-crx": "npm run build && node script/crx.js",
    "fix": "eslint --fix 'src/**/*.{js,vue,less}'",
    "format": "prettier --write 'src/**/*.{js,vue,less}'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "standard-version && npm run build-zip"
  },
  "lint-staged": {
    "src/**/*.{js,vue,less}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "ant-design-vue": "^1.7.2",
    "arrive": "^2.4.1",
    "core-js": "^3.6.5",
    "crypto-js": "^4.0.0",
    "default-passive-events": "^2.0.0",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.3",
    "commitlint": "^11.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "copy-webpack-plugin": "^6.3.2",
    "crx": "^5.0.1",
    "cz-customizable": "^6.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.3.0",
    "less": "^3.12.2",
    "less-loader": "^7.1.0",
    "lint-staged": "^10.5.2",
    "prettier": "^1.19.1",
    "standard-version": "^9.0.0",
    "style-resources-loader": "^1.4.1",
    "vue-cli-plugin-chrome-ext": "~0.0.5",
    "vue-cli-plugin-style-resources-loader": "^0.1.4",
    "vue-template-compiler": "^2.6.11",
    "zip-webpack-plugin": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./project/node_modules/cz-customizable"
    }
  }
}
